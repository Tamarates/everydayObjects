{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true, // Asegúrate de que esto esté configurado para permitir la emisión
    "outDir": "./dist", // Cambia esto según tu estructura de carpetas
    "target": "esnext", // Cambia esto según tus necesidades
    "module": "esnext", // Cambia esto según tus necesidades
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "types": ["vite/client"] // Cambia o añade tipos según sea necesario
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
